<div class="ride_testimonial">
<!-- recent rides start-->
    <div class="recent-rides">
    <p class="heading dancing-script">Recent Rides</p>
    <div id="buttons"><%= link_to image_tag("up_arrow.png",:id => "prev1") %> </div> 
      <div id="carousel1">
        <div id="slides1">
          <ul style="margin-top:9px">
             <% if !@carpools.empty? %>
             <% @carpools.each do |c| %>
             <li class="slide1">
              <span class="slide-rides"><% if c.user.picture.url == "blank.png" && c.user.provider=="facebook"%>   
              <%= image_tag "http://graph.facebook.com/#{c.user.uid}/picture?width=100&height=100",:style=> "border-radius:50%;border:5px solid #18BD9D" %>
              <% else %>
                <%= image_tag c.user.picture.url, :style=> "width:75px;height:75px;border-radius:50%;border:5px solid #18BD9D"%>
              <% end %>
              </span>
              <span class="slide-rides">
              <p><span class="" style="color:#18BD9D;">Source</span> <%= c.source.first.source %></p>
              </span>
              <span class="slide-rides">
              <p> <span class="" style="color:#18BD9D;">Destination</span> <%= c.destination.first.destination %></p>
              </span>
              <span class="slide-rides">
              <p><span class="" style="color:#18BD9D;">Date</span><br><%= c.journey_date.strftime("%d, %B, %Y") %> </p>
              </span>
              <span class="slide-rides">
              <p><span class="" style="color:#18BD9D;">Price</span><br> <%= c.price %> â‚¹ </p>
              </span>
             </li>
             <% end %>  
             <% end %>
          </ul>
        </div>
      </div>
      <div id="buttons"><%= link_to image_tag("down_arrow.png",:id => "next1") %> </div>
    </div>
<!-- testimonial start-->
   <div class="testimonial">
   <p class="heading dancing-script">Testimonials</p>
    <div id="buttons"><%= link_to image_tag("up_arrow.png",:id => "prev2") %> </div>
        <div id="carousel2">
        <div id="slides">
            <ul>
            <% if !@testimonials.empty? %>
            <% @testimonials.each do |t| %>
            <li class="slide">
              <% if t.user.picture.url == "blank.png" && t.user.provider=="facebook"%>   
                  <%= image_tag "http://graph.facebook.com/#{t.user.uid}/picture?width=120&height=120",:style=> "border-radius:50%;border:5px solid #18BD9D" %>
              <% else %>
                <%= image_tag t.user.picture.url, :style=> "width:120px;height:120px;border-radius:50%;border:5px solid #18BD9D"%>
              <% end %>

               <h1 id="name"><%= t.user.username %></h1>
               <p><%= t.message %></p>
            </li>
             <% end %>
             <% end %>
            </ul>
        </div>
        </div>
        <div id="buttons"><%= link_to image_tag("down_arrow.png",:id => "next2") %> </div>
    </div>
</div>
